<Window x:Class="Tamagochi.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tamagochi.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="677" Width="1053" MinHeight="600" MinWidth="880">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/TamagochiMainStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <!-- Menu -->
        <StackPanel>
            <Menu>
                <MenuItem Header="Game">
                    <MenuItem Header="Start" />
                    <MenuItem Header="Pause" />
                    <MenuItem Header="Stop" />
                    <MenuItem Header="Save" />
                    <MenuItem Header="Exit" />
                </MenuItem>
            </Menu>
        </StackPanel>

        <!-- Window content -->
        <Border BorderThickness="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Indicators -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="1.5*"></ColumnDefinition>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Margin="5">
                        <TextBlock Text="Health:" Margin="3 0" Padding="3" FontSize="14" FontStyle="Italic" FontWeight="SemiBold" />
                        <ProgressBar Margin="10 5" Minimum="0" Maximum="100" Value="75" Height="20" />
                        <TextBlock Text="Satiety:" Margin="3 0"  Padding="3" FontSize="14" FontStyle="Italic" FontWeight="SemiBold" />
                        <ProgressBar Margin="10 5" Minimum="0" Maximum="100" Value="30" Height="20" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="1" VerticalAlignment="Center" Margin="15">
                        <TextBlock TextAlignment="Center" Text="Game time:" FontFamily="Comic Sans MS" FontSize="18" />
                        <TextBlock TextAlignment="Center" Text="Pet age:" FontFamily="Comic Sans MS" FontSize="18" />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Margin="5" Grid.Column="2">
                        <TextBlock Text="Mood:" Margin="3 0" Padding="3" FontSize="14" FontStyle="Italic" FontWeight="SemiBold" />
                        <ProgressBar Margin="10 5" Minimum="0" Maximum="100" Value="75" Height="20" />
                        <TextBlock Text="Aviary cleanness:" Margin="3 0"  Padding="3" FontSize="14" FontStyle="Italic" FontWeight="SemiBold" />
                        <ProgressBar Margin="10 5" Minimum="0" Maximum="100" Value="30" Height="20" />
                    </StackPanel>
                </Grid>

                <!-- Content -->
                <Grid Margin="5" Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center">
                        <Button Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Feed"
                                           Padding="5"
                                           FontFamily="Verdana"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Grid.Column="0"
                                           TextAlignment="Left"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="0 0 40 0" />
                                <Image MaxWidth="50"
                                       Source="/Images/Icons/feed.png"
                                       Grid.Column="1" />
                            </Grid>
                        </Button>
                        <Button Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Play"
                                           Padding="5"
                                           FontFamily="Verdana"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Grid.Column="0"
                                           TextAlignment="Left"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="0 0 40 0" />
                                <Image MaxWidth="50"
                                       Source="/Images/Icons/play.png"
                                       Grid.Column="1" />
                            </Grid>
                        </Button>
                    </StackPanel>

                    <Grid Grid.Column="1">
                        <Image Source="/Images/Bulbosaur/bulbosaur-1.png"
                           Height="{Binding RelativeSource=
                                    {RelativeSource Mode=Self},
                                    Path=Parent.ActualHeight}"
                           Width="{Binding RelativeSource=
                                    {RelativeSource Mode=Self},
                                    Path=Parent.ActualWidth}" />
                    </Grid>

                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                        <Button Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Clean aviary"
                                           Padding="5"
                                           FontFamily="Verdana"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Grid.Column="0"
                                           TextAlignment="Left"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="0 0 40 0" />
                                <Image MaxWidth="50"
                                       Source="/Images/Icons/clean.png"
                                       Grid.Column="1" />
                            </Grid>
                        </Button>
                        <Button Margin="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Euthanize"
                                           Padding="5"
                                           FontFamily="Verdana"
                                           FontSize="14"
                                           FontStyle="Italic"
                                           Grid.Column="0"
                                           TextAlignment="Left"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Left"
                                           Margin="0 0 40 0" />
                                <Image MaxWidth="50"
                                       Source="/Images/Icons/euthanize.png"
                                       Grid.Column="1" />
                            </Grid>
                        </Button>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>