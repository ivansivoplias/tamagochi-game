                    xmlns:local="clr-namespace:Tamagochi.UI">
    <!--Main app colors-->
    <Color x:Key="BackgroundLight">#a4efefef</Color>
    <Color x:Key="BackgroundDark">#363636</Color>

    <!-- Action buttons -->
    <Color x:Key="ButtonBackgroundStart">#053047</Color>
    <Color x:Key="ButtonBackgroundEnd">#60b1f0</Color>
    <Color x:Key="ActionTextColor">#f5eea0</Color>
    <Color x:Key="HoverButtonBackgroundStart">#031c2a</Color>
    <Color x:Key="HoverButtonBackgroundEnd">#a0b5f6</Color>
    <Color x:Key="HoverActionTextColor">#b2efb2</Color>
    <Color x:Key="ButtonPressedBackgroundColor">#026eaf</Color>
    <Color x:Key="ButtonPressedForegroundColor">#bbefefef</Color>
</ResourceDictionary>